<h2>Sign in</h2>


<div class="row">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div><%= f.label :email %><br />
	  <%= f.email_field :email, autofocus: true , :style => 'width:30%' %></div>

	  <div><%= f.label :password %><br />
	    <%= f.password_field :password, autocomplete: "off" , :style => 'width:30%' %></div>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label :remember_me , :style => 'width:30%' %></div>
	  <% end -%>

	  <div><%= f.submit "Sign in" , :class=> "button [tiny small large]" %></div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
